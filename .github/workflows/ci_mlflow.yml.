name: MLFlow CI/CD (Advance)

on:
  push:
    branches:
      - main 

env:
  # Nama repositori Docker Anda
  DOCKER_REPOSITORY: workflow-ci-model

jobs:
  train_and_deploy:
    runs-on: ubuntu-latest
    
    # Izin yang dibutuhkan untuk Checkout dan Push Packages (Docker Hub)
    permissions:
      contents: read
      packages: write 
      
    steps:
    - name: 1. Checkout Code
      uses: actions/checkout@v4

    # Perbaikan Typo: Menggunakan actions/setup-python@v4 yang benar (garis miring)
    - name: 2. Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.9' 

    - name: 3. Install Dependencies
      run: |
        pip install dagshub mlflow pandas scikit-learn numpy

    # 4. RUN MLFlow Project (LEVEL BASIC)
    - name: 4. Run MLFlow Project (Train Model)
      # Menggunakan DAGSHUB_TOKEN yang sudah di-set di GitHub Secrets
      env:
        DAGSHUB_TOKEN: ${{ secrets.DAGSHUB_TOKEN }} 
      run: |
        mlflow run ./MLProject -e train
        
    # 5. Upload MLFlow Artifacts (LEVEL SKILLED)
    - name: 5. Upload MLFlow Artifacts to GitHub
      uses: actions/upload-artifact@v4
      with:
        name: trained-model-mlruns
        path: mlruns/ 
        
    # --- LEVEL ADVANCE (4 POIN): DOCKERISASI & TAUTAN ---
    
    # 6. Login ke Docker Hub
    # Token PAT Docker Hub (DOCKER_PASSWORD) sekarang memiliki izin Tulis penuh
    - name: 6. Login to Docker Hub
      uses: docker/login-action@v3
      with:
        username: ${{ secrets.DOCKER_USERNAME }}
        password: ${{ secrets.DOCKER_PASSWORD }}
        
    # 7. Dapatkan URI Model Terbaru
    - name: 7. Find Latest MLFlow Run ID and Model URI
      id: find_uri
      run: |
        LATEST_RUN_ID=$(ls -t mlruns/0 | head -1)
        MODEL_URI="runs:/${LATEST_RUN_ID}/model"
        
        echo "model_uri=$MODEL_URI" >> $GITHUB_OUTPUT
        echo "LATEST_RUN_ID=$LATEST_RUN_ID" >> $GITHUB_OUTPUT

    # 8. Build Docker Image
    - name: 8. Build Docker Image with MLFlow
      id: build_tag
      run: |
        # Format tag: username/repo_name:run_id
        DOCKER_IMAGE_TAG=${{ secrets.DOCKER_USERNAME }}/${{ env.DOCKER_REPOSITORY }}:${{ steps.find_uri.outputs.LATEST_RUN_ID }}
        
        mlflow models build-docker \
        --model-uri ${{ steps.find_uri.outputs.model_uri }} \
        --name $DOCKER_IMAGE_TAG \
        --env-manager=conda
        
        echo "DOCKER_IMAGE_TAG=$DOCKER_IMAGE_TAG" >> $GITHUB_OUTPUT

    # 9. Push Docker Image ke Docker Hub
    - name: 9. Push Docker Image
      run: |
        # Menggunakan tag yang dihasilkan di langkah sebelumnya
        docker push ${{ steps.build_tag.outputs.DOCKER_IMAGE_TAG }}
        
    # 10. BUAT TAUTAN KE DOCKER HUB (Artifact yang Anda cari)
    - name: 10. Create Docker Hub Link File
      run: |
        DOCKER_URL="https://hub.docker.com/r/${{ secrets.DOCKER_USERNAME }}/${{ env.DOCKER_REPOSITORY }}/tags"
        echo $DOCKER_URL > Tautan_ke_Docker_Hub.txt
        
    # 11. Upload Tautan ke Docker Hub sebagai Artifact
    - name: 11. Upload Docker Hub Link Artifact
      uses: actions/upload-artifact@v4
      with:
        name: Tautan_ke_Docker_Hub
        path: Tautan_ke_Docker_Hub.txt
